{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"standard"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
		"indent": ["error", 4],
		"semi": [
			"error",
			"always"
		],
		"comma-dangle": [
			"error",
			"always-multiline"
		],
		"quote-props": "off",
		"import/order": "error",
		"no-case-declarations": "off"
	}
}

